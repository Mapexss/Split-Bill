{
  "name": "split-bill-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n SERVER,CSS,CLIENT -c cyan,magenta,green \"bun run dev:server\" \"bun run dev:css\" \"bun run dev:client\"",
    "dev:server": "bun run --hot src/server.ts",
    "dev:css": "bunx tailwindcss -i ./src/styles.css -o ./public/styles.css --watch",
    "dev:client": "bun build src/client.tsx --outdir=public --sourcemap=external --target=browser --watch",
    "build:css": "bunx tailwindcss -i ./src/styles.css -o ./public/styles.css --minify",
    "build:client": "bun build src/client.tsx --outdir=public --sourcemap=external --target=browser --minify",
    "build:server": "bun build src/server.ts --outdir=dist --target=bun",
    "build": "bun run build:css && bun run build:client && bun run build:server",
    "start": "NODE_ENV=production bun dist/server.js",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/html": "^1.0.2",
    "@elysiajs/static": "^1.0.0",
    "elysia": "^1.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.0",
    "lucide-react": "^0.441.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  }
}